{%- if section.settings.full_width -%}
{%- assign full_width = true -%}
{%- endif -%}

{%- if section.settings.title == blank and section.settings.subtitle == blank -%}
{%- assign no_header = true -%}
{%- endif -%}

{%- capture column_width -%}
{%- render 'block-width' -%}
{%- endcapture -%}

<div id="section-{{ section.id }}"
  class="{% if full_width %}section-full-width{% endif %} {% if no_header %}section-no-title{% endif %} {{ section.settings.section_style }}"
  data-section-id="{{ section.id }}" data-section-type="featured-video-section">
  <div class="box">
    <div class="{%- if full_width -%}wrapper-full {%- else -%}wrapper {%- endif -%}">

      {%- unless no_header -%}

      <div class="section-header">
        {%- unless section.settings.title == blank -%}
        <h2 class="section-header__title">{{ section.settings.title | escape }}</h2>
        {%- endunless -%}
        {%- unless section.settings.subtitle == blank -%}
        <p class="section-header__subtitle">{{ section.settings.subtitle | escape }}</p>
        {%- endunless -%}

      </div>
      {%- endunless -%}

      {%- if section.blocks.size > 0 -%}
      <div class="grid {% if full_width %}grid-full{% else %}grid-spacer{% endif %}">
        <!-- Blocks -->
        {%- for block in section.blocks -%}
        <div class="media-wrapper video-wrapper">
          {%- if block.settings.video_url == blank -%}
          <iframe class="media lazyload" data-src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720"
            width="850" height="480" frameborder="0" allowfullscreen></iframe>
          {%- else -%}
          {%- if block.settings.video_url.type == "youtube" -%}
          <iframe id="youtube-video" class="media lazyload"
            data-src="//www.youtube.com/embed/{{ block.settings.video_url.id }}?rel=0&showinfo=0&vq=720" width="850"
            height="480" frameborder="0" allowfullscreen></iframe>
          {%- if block.settings.video_cover_image !=blank -%}
          <div class="youtube-cover-image"
            style="background-image:url('{{block.settings.video_cover_image | img_url: '1920x1080'}}')">
                {%- if block.settings.animated_button -%}
                  <span class="youtube-button"></span>
              {%- endif -%}
            </div>
          {%- endif -%}
          {%- endif -%}
          {%- if block.settings.video_url.type == "vimeo" -%}
          <iframe class="media lazyload"
            data-src="//player.vimeo.com/video/{{ block.settings.video_url.id }}?color={{ settings.color_secondary | remove: "
            #" }}&byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe>
          {%- endif -%}
          {%- endif -%}
        </div>

        {%- endfor -%}
      </div>
      {%- else -%}
      {%- render 'no-blocks' -%}
      {%- endif -%}

    </div>
  </div>
</div>

{% schema %}
{
"name": "Video",
"class": "featured-video-section",
"max_blocks": 3,
"settings": [
{
"type": "checkbox",
"id": "full_width",
"label": "Full width",
"default": false
},
{
"type": "text",
"id": "title",
"label": "Heading",
"default": "Featured video"
},
{
"type": "text",
"id": "subtitle",
"label": "Subheading"
},
{
"type": "select",
"id": "section_style",
"label": "Section style",
"default": "section-blank",
"options": [
{
"value": "section-blank",
"label": "Blank background"
},
{
"value": "section-default",
"label": "Accent background"
},
{
"value": "section-border",
"label": "Border top"
}
]
}
],
"blocks" : [
{
"type": "video",
"name": "Video",
"settings": [
{
"type": "image_picker",
"id": "video_cover_image",
"label": "Video cover image",
"info": "Add an image with 1920x1080px, not more than 100k."
},
{
  "type": "video_url",
  "id": "video_url",
  "label": "Video link",
  "accept": ["youtube", "vimeo"]
  },
  {
    "type": "checkbox",
    "id": "animated_button",
    "label": "Add animated button on cover image",
    "default": false
  }
]
}
],
"presets": [
{
"name": "Video",
"category": "Video",
"blocks": [
{
"type": "video"
}
]
}
]
}
{% endschema %}
/*================ _Control_color ================*/
@function color-control($color) {
  @if (lightness( $color ) > 50) {
    @return #000;
  }
  @else {
    @return #fff;
  }
}

@function color-control-reverse($color) {
  @if (lightness( $color ) > 50) {
    @return #fff;
  }
  @else {
    @return #000;
  }
}

/*================ _Adaptive_color ================*/
@function adaptive-color($color, $percentage) {
  @if (lightness($color) > 50) {
    @return darken($color, $percentage);
  }
  @else {
    @return lighten($color, $percentage);
  }
}


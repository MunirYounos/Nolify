/*================ _Footer ================*/
// Stick footer to bottom when page content is less
.footer-section {
  margin-top: auto;
}

// Footer
.site-footer {
  @include colorOverwrite($anodyne-footer-clr, $anodyne-primary-clr, $anodyne-primary-white-clr, $anodyne-background-clr, $anodyne-primary-clr, $anodyne-primary-clr, $white, $anodyne-light-gray-clr);

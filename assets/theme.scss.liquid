	padding: floor($gutter-sm / 1.8 );
  .is-sold-out & {
    opacity: $opacity;
  }
}

.grid-product__image-wrapper {
  position: relative;
  border-top-left-radius: $borderRadius;
  border-top-right-radius: $borderRadius;
}

.grid-product__image-link {

}

/*================ _Blockquote ================*/
blockquote {
  margin: 0;
  display: block;
  width: 100%;
}

cite {
  display: block;
  font-size: $baseFontSize-sm;

  &::before {
    content: "horizontal_rule";
    @include iconFontStack;
  }
}


/*================ _Pagination ================*/
.pagination {

    margin-bottom: 0;
  }

  ul {
    ul {
      margin-bottom: 0;
    }
  }

  li {
    margin-bottom: 0;
  }

  img {
    height: auto;
  }

  a {
    color: $anodyne-primary-dark-clr;
    word-break: break-word;
  }
  .table-wrap {
    margin-bottom: $spacer;
  }

  blockquote {
    padding: $gutter;
    text-align: center;
    font-size: $baseFontSize-lg;
    margin-bottom: $spacer;

    &::before, &::after {
      @include iconFontStack;
      content: "format_quote";
      color: $colorSecondary;
      display: block;
    }

    &::before {
      text-align: left;
      margin-left: -$gutter-sm;
    }

    &::after {
      text-align: right;
      margin-right: -$gutter-sm;
    }


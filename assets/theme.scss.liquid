        border-top: $borders;
        border-color: $colorFooterBorder;
        position: relative;
        display: block;
        margin-left: -$gutter-sm;
        margin-right: -$gutter-sm;
        margin-bottom: $gutter;
      }
    }
  }
}

.inline-footer {
  @include screenUp($postSmall) {
    li {
      display: inline-block;
      margin-right: $gutter;
      margin-bottom: 0;

      &:last-child {
